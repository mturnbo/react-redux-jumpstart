{
	"extends": "airbnb",
	"env": {
		"browser": true
	},
	"rules": {
		"indent": ["error", 2],
		"max-len": ["error", {
			"code": 120,
			"ignoreComments": true,
			"ignoreUrls": true,
			"ignoreStrings": true,
			"ignoreTemplateLiterals": true
		}],
		"arrow-parens": 0,
		"comma-dangle": 0,
		"react/prefer-stateless-function": 0,
		"prefer-template": 0,
		"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
	}
}
